        https://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="forageFileRepository" class="data.forage_data">
        <constructor-arg value="./data/forage_data"/>
    </bean>

    <bean id="foragerFileRepository" class="data.forage_data_test.foragers">
        <constructor-arg value="./data/foragers.csv"/>
    </bean>

    <bean id="itemFileRepository" class="data.forage_data_test.items">
        <constructor-arg value="./data/items.txt"/>
    </bean>

    <bean id="foragerService" class="learn.foraging.domain.ForagerService">
        <constructor-arg value="foragerFileRepository"/>
    </bean>

    <bean id="forageService" class="learn.foraging.domain.ForageService">
        <constructor-arg value="forageFileRepository"/>
        <constructor-arg value="foragerFileRepository"/>
        <constructor-arg value="itemFileRepository"/>
    </bean>

    <bean id="itemService" class="learn.foraging.data.ItemService">
        <constructor-arg value="itemFileRepository"/>
    </bean>

    <bean id="controller" class="learn.foraging.ui.Controller">
        <constructor-arg value="foragerService"/>
        <constructor-arg value="forageService"/>
        <constructor-arg value="itemService"/>
        <constructor-arg value="view"/>
    </bean>

    <bean id="view" class="learn.foraging.ui.View">
        <constructor-arg value="io"/>
    </bean>

    <bean id="io" class="learn.foraging.ui.Console">
    </bean>
